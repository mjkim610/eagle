{
    "manifest_version": 2,

    "name": "__MSG_name__",
    "short_name": "__MSG_short_name__",
    "author": "__MSG_author__",
    "description": "__MSG_description__",
    "version": "1.0.1.4",
    "default_locale": "en",

    "icons": {
        "16": "image/icon-small-transparent.png",
        "48": "image/icon-small-transparent.png",
        "128": "image/icon-small-transparent.png"
    },

    "browser_action": {
        "default_icon": "image/icon-small-transparent-cropped.png"
    },

    "content_scripts": [{
        "matches": ["https://*/*", "http://*/*"],
        "js": ["javascript/external/jquery-3.0.0.min.js", "javascript/external/aes.js", "javascript/external/pbkdf2.js", "javascript/external/d3.min.js", "javascript/content.js"]
    }],

    "background": {
        "scripts": ["javascript/background.js"]
    },

    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "https://ajax.googleapis.com/"
    ]
}
